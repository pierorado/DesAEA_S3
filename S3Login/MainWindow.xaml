<Window x:Class="S3Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S3Login"
        mc:Ignorable="d"
        Title="Acceso" Height="150"
        Width="250">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid  Margin="5">
        <StackPanel>

            <TextBlock VerticalAlignment="Center">Usuario</TextBlock>
            <TextBox x:Name="user" Grid.Column="1"  VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" VerticalAlignment="Center">Password</TextBlock>
            <TextBox x:Name="pass" Grid.Column="1"  VerticalAlignment="Center"/>
            <Button x:Name="BtnConsultar" Grid.Column="1" Grid.Row="2"
                HorizontalAlignment="Right" Height="22" Click="BtnConsultar_Click">ACCESO</Button>
               
        
        </StackPanel>
    </Grid>
</Window>
